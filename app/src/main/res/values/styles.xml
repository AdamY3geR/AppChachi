<resources>

    <!-- Base application theme -->
    <style name="Base.Theme.AppChachi" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <!-- Sets the primary color to white -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <!-- Sets the style for PopupMenu -->
    </style>

    <!-- PopupMenu style -->
    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
        <!-- Sets the background for PopupMenu -->
    </style>

    <!-- AppChachi theme -->
    <style name="Theme.AppChachi" parent="Base.Theme.AppChachi" />

    <!-- Define AppTheme.WhiteBackground style -->
    <style name="AppTheme.WhiteBackground" parent="Theme.AppChachi">
        <!-- Sets attributes for the white background theme -->
        <!-- For example, setting the window background to white -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
